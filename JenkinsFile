pipeline {
    agent any
    environment {
        PATH = "C:\\WINDOWS\\SYSTEM32"
    }
    tools {
        maven 'Maven' 
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the Git repository
                git 'https://github.com/SihamOubalaout/PainCare3.git'
            }
        }

        stage('Build') {
            steps {
                // Run Maven build on Windows
                bat 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                // Run unit tests on Windows
                bat 'mvn test'
            }

            post {
                // Archive test results
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build a Docker image with the application jar file
                    docker.build('paincare-app') // You can specify the image name here
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Run the Docker container, mapping necessary ports
                    docker.image('paincare-app').run('-p 8080:8080') // Replace ports as needed
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // Define any additional deployment steps, if needed
            }
        }
    }

    post {
        always {
            // Clean up workspace
            cleanWs()
        }
    }
}
